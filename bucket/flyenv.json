  "persist": "PhpWebStudy-Data",
  "pre_install": [
    "# Extract the NSIS installer",
    "$installer = Join-Path $dir 'FlyEnv-Setup-4.10.8.exe'",
    "$7zip = Get-Command '7z' -ErrorAction SilentlyContinue | Select-Object -ExpandProperty Source",
    "if (-not $7zip) { $7zip = Join-Path $env:SCOOP 'apps\\7zip\\current\\7z.exe' }",
    "",
    "Write-Host 'Extracting NSIS installer...' -ForegroundColor Green",
    "& $7zip x $installer \"-o$dir\" -y | Out-Null",
    "",
    "# Extract app-64.7z from $PLUGINSDIR",
    "$appArchive = Join-Path $dir '$PLUGINSDIR\\app-64.7z'",
    "if (Test-Path $appArchive) {",
    "    Write-Host 'Extracting app-64.7z...' -ForegroundColor Green",
    "    & $7zip x $appArchive \"-o$dir\" -y | Out-Null",
    "    ",
    "    # Clean up",
    "    Remove-Item (Join-Path $dir '$PLUGINSDIR') -Recurse -Force -ErrorAction SilentlyContinue",
    "    Remove-Item $installer -Force -ErrorAction SilentlyContinue",
    "    Write-Host 'Installation completed.' -ForegroundColor Green",
    "} else {",
    "    Write-Error 'Failed to extract installer'",
    "}"
  ],
  "bin": "PhpWebStudy.exe",
  "shortcuts": [["PhpWebStudy.exe", "FlyEnv"]],
  "checkver": {
    "github": "xpf0000/FlyEnv"
  },
  "autoupdate": {
    "url": "https://github.com/xpf0000/FlyEnv/releases/download/v$version/FlyEnv-Setup-$version.exe"
  },
  "notes": "FlyEnv is an all-in-one environment management tool. Help developers quickly set up a local development environment. It simplifies development by offering swift multi-version switching, full-stack technology support, and a seamless cross-platform experience. Whether you're working with PHP, NodeJS, Java, Go, Rust or Python, FlyEnv integrates all necessary tools with a single command, eliminating configuration headaches and letting you focus on what truly mattersâ€”creation, not debugging."
